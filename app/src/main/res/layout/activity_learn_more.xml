<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.LearnMoreActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/playQuizTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/how_to_play_quiz"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_16font_mdp"
                android:textColor="@color/result_text_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_20mdp"/>
            <TextView
                android:id="@+id/quizInfoId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/result_text_color"
                app:layout_constraintTop_toBottomOf="@id/playQuizTxt"
                android:layout_marginTop="@dimen/_10mdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="@dimen/_5mdp"
                android:paddingBottom="@dimen/_5mdp"
                android:paddingStart="@dimen/_15mdp"
                android:paddingEnd="@dimen/_8mdp"
                android:gravity="left"
                android:textSize="@dimen/_13font_mdp"
                android:text="@string/quiz_info"/>

            <TextView
                android:id="@+id/howEarnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to earn more ?"
                android:textColor="@color/result_text_color"
                android:textSize="@dimen/_16font_mdp"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toBottomOf="@id/quizInfoId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10mdp"/>

            <TextView
                android:id="@+id/earnMoreId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_light"
                android:gravity="start"
                android:paddingStart="@dimen/_15mdp"
                android:paddingTop="@dimen/_5mdp"
                android:paddingEnd="@dimen/_8mdp"
                android:paddingBottom="@dimen/_5mdp"
                android:text="@string/earn_more_info"
                android:textColor="@color/result_text_color"
                android:textSize="@dimen/_13font_mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/howEarnMore" />

            <TextView
                android:id="@+id/howWithdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to Withdraw ?"
                android:textColor="@color/result_text_color"
                app:layout_constraintTop_toBottomOf="@id/earnMoreId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_16font_mdp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="@dimen/_10mdp"/>
            <TextView
                android:id="@+id/withdrawInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/result_text_color"
                android:textSize="@dimen/_13font_mdp"
                android:fontFamily="@font/roboto_light"
                android:gravity="left"
                android:text="@string/withdraw_way"
                app:layout_constraintTop_toBottomOf="@id/howWithdraw"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10mdp"
                android:paddingStart="@dimen/_15mdp"
                android:paddingBottom="@dimen/_5mdp"
                android:paddingTop="@dimen/_5mdp"
                android:paddingEnd="@dimen/_8mdp"/>
            <Button
                android:id="@+id/gotItBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/withdrawInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Ok, I got it !"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_35mdp"
                android:paddingEnd="@dimen/_35mdp"
                android:paddingTop="@dimen/_10mdp"
                android:background="@drawable/got_it_btn_bg"
                android:paddingBottom="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_20mdp"/>







        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>