<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10mdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:textSize="@dimen/_14font_mdp"
                android:textColor="#595454"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#A3A1A1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/grameenBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25mdp"
                android:text="Grameenphone"
                android:textAllCaps="false"
                android:gravity="start"
                android:drawableStart="@drawable/my_gp"
                android:textColor="#595454"
                android:drawablePadding="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_8mdp"
                android:padding="@dimen/_5mdp"
                android:background="@drawable/box_design"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/blBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25mdp"
                android:layout_marginTop="@dimen/_3mdp"
                android:text="Banglalink"
                android:textAllCaps="false"
                android:gravity="start"
                android:drawableStart="@drawable/my_bl"
                android:padding="@dimen/_5mdp"
                android:drawablePadding="@dimen/_10mdp"
                android:textColor="#595454"
                android:background="@drawable/box_design"/>
  <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/robiBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25mdp"
                android:layout_marginTop="@dimen/_3mdp"
                android:text="Robi"
                android:textAllCaps="false"
                android:gravity="start"
                android:drawableStart="@drawable/my_robi_p"
                android:padding="@dimen/_5mdp"
                android:drawablePadding="@dimen/_16mdp"
                android:textColor="#595454"
                android:background="@drawable/box_design"/>
  <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/airtelBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25mdp"
                android:layout_marginTop="@dimen/_3mdp"
                android:text="Airtel"
                android:textAllCaps="false"
                android:gravity="start"
                android:drawableStart="@drawable/my_airtel"
                android:padding="@dimen/_5mdp"
                android:drawablePadding="@dimen/_10mdp"
                android:textColor="#595454"
                android:background="@drawable/box_design"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>